<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <dev.cquintana.shoppinglist.EditTextExtended
            android:id="@+id/server_url_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEditText|textUri"
            android:hint="@string/base_url_hint"
            android:layout_marginStart="@dimen/dialog_edittext_margin"
            android:layout_marginEnd="@dimen/dialog_edittext_margin" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <dev.cquintana.shoppinglist.EditTextExtended
            android:id="@+id/server_bearer_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEditText|textUri"
            android:hint="@string/server_bearer_hint"
            android:layout_marginStart="@dimen/dialog_edittext_margin"
            android:layout_marginEnd="@dimen/dialog_edittext_margin" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>